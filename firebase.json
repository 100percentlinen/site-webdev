{
  "hosting": {
    "public": "publish",
    "cleanUrls": true,
    "trailingSlash": false,
    "redirects": [
      { "source": "/angular", "destination": "/angular/guide", "type": 301 },
      { "source": "/angular/guide/cheatsheet", "destination": "/angular/cheatsheet.html", "type": 301 },
      { "source": "/angular/guide/glossary", "destination": "/angular/glossary.html", "type": 301 }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}